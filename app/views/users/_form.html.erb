<%= form_with(model: user) do |f|%>

<%= render "shared/errors", object: user %>

<%= f.label :username %>
<%= f.text_field :username, auto_focus: true %>

<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :email %>
<%= f.email_field :email  %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.label :password_confirmation %>
<%= f.password_field :password_confirmation %>

<% if user.new_record? %>
    <%= f.submit("Submit") %>
<% else %>
    <%= f.submit("Update Details")%>
<% end %>
<% end%>